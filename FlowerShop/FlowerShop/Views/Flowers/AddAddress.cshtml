@model AddressFormDto

@{
    ViewBag.Title = "Add Address";
    }
    @{var userId = User.Id();}
    <div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        
        <form method="post">

            <div class="d-none">
                <input asp-for="UserId" class="d-none" value="@userId">
            </div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" placeholder="Your Full Name">
                <span asp-validation-for="FullName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressInfo"></label>
                <input asp-for="AddressInfo" class="form-control" placeholder="Str Info">
                <span asp-validation-for="AddressInfo" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PopulatedPlace"></label>
                <input asp-for="PopulatedPlace" class="form-control" placeholder="City">
                <span asp-validation-for="PopulatedPlace" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>

            <input class="btn btn-custom mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}