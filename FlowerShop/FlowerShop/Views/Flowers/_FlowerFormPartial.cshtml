@model FlowerFormDto

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        
        <form method="post">
            <div class="form-group">
                <label asp-for="FlowerName"></label>
                <input asp-for="FlowerName" class="form-control" placeholder="Dahlia, Hyacinth, etc...">
                <span asp-validation-for="FlowerName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlowerPrice"></label>
                <input asp-for="FlowerPrice" class="form-control" placeholder="$">
                <span asp-validation-for="FlowerPrice" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL"></label>
                <input asp-for="ImageURL" class="form-control" placeholder="Your URL here...">
                <span asp-validation-for="ImageURL" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info"></label>
                <input asp-for="Info" class="form-control" placeholder="Information about the flower">
                <span asp-validation-for="Info" class="small text-danger"></span>
            </div>

            <input class="btn btn-custom mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

